{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "types": ["jest", "node"],
    "module": "commonjs",
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "**/__tests__/**/*.ts",
    "src/__tests__/**/*.ts", 
    "src/__tests__/**/*.tsx",
    "src/__tests__/**/*.js",
    "src/__tests__/**/*.jsx"
  ]
}